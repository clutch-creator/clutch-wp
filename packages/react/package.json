{
  "name": "@clutch-wp/react",
  "version": "1.1.6",
  "description": "React hooks and context for Clutch WordPress SDK",
  "main": "dist/index.js",
  "types": "src/index.ts",
  "type": "module",
  "files": [
    "src",
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "swc src --out-dir dist --config-file ./.swcrc --delete-dir-on-start --strip-leading-paths && tsc --emitDeclarationOnly --outDir dist",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check-types": "tsc --noEmit",
    "check-types:watch": "tsc --noEmit --watch"
  },
  "keywords": [
    "react",
    "hooks",
    "wordpress",
    "clutch"
  ],
  "author": "",
  "license": "GPL-2.0",
  "dependencies": {
    "@clutch-wp/sdk": "workspace:^",
    "@swc/helpers": "^0.5.17",
    "@tanstack/react-query": "^5.79.0",
    "wp-types": "^4.68.0"
  },
  "devDependencies": {
    "@clutch-wp/eslint-config": "workspace:*",
    "@clutch-wp/prettier-config": "workspace:*",
    "@swc/cli": "^0.7.7",
    "@swc/core": "^1.3.60",
    "@types/react": "^18.0.0",
    "eslint": "^9.20.0",
    "prettier": "^3.5.2",
    "typescript": "^5.6.0"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0"
  }
}
