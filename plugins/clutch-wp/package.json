	"devDependencies": {
		"@prettier/plugin-php": "^0.22.4",
		"@wordpress/icons": "^10.18.0",
		"@wordpress/prettier-config": "^4.18.0",
		"@wordpress/scripts": "^30.11.0",
		"prettier": "^3.5.2"
	}
}
